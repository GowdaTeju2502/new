@page
@model E_commerce.Database.Entity.AdminModel
@{
    ViewData["Title"] = "Admin";
}
<h3>This is Admin Page</h3>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="name" class="col-form-label">Enter Your Name</label>
                            <input asp-for="name" id="uname" class="form-control" type="text" placeholder="Enter Your Username" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="password" class="col-form-label">Password</label>
                            <input asp-for="password" id="pass" class="form-control" type="password" placeholder="Enter your Correct Password" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="button" id="sign" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>
                    <!-- Error Message -->
                    <div id="error-message" class="alert alert-danger text-center" style="display: none;">
                        Incorrect username or password. Please try again.
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="#" class="text-primary">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("sign").addEventListener("click", function () {
            var username = document.getElementById("uname").value;
            var password = document.getElementById("pass").value;


            if (username === "Admin" && password === "password") {

                window.location.href = "/Admin/AdminSellerApprovalPage";
            } else {

                document.getElementById("error-message").style.display = "block";
            }
        });
    });
</script>
