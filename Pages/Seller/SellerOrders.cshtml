@page
@model E_commerce.Database.Entity.SellerOrdersModel
@{
    ViewData["Title"] = "Your Orders";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center text-primary mb-4">Orders for You</h3>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning">@Model.ErrorMessage</div>
            }

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer Name</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total Amount</th>
                            <th>Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.Order_Id</td>
                                <td>@order.Customers.Customer_Name</td>
                                <td>@order.product.Product_Name</td>
                                <td>@order.Ordered_Quantity</td>
                                <td>@order.product.Product_Price</td>
                                <td>@(order.Ordered_Quantity * order.product.Product_Price)</td>
                                <td>@order.Ordered_Date</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="text-right">
                    <h5>Total Sales: @Model.TotalAmount</h5>
                </div>
            }
            else
            {
                <div class="alert alert-warning">No orders available at the moment.</div>
            }
        </div>
    </div>
</div>
