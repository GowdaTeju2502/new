 @page
@model E_commerce.Database.Entity.SellerProductsModel
@{
}

<div class="container">
    <!-- Products List Section -->
    <h3>Your Products</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Product_Name</td>
                    <td>@product.Product_Price</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateQuantity" asp-route-productId="@product.Product_Id">
                            <input type="number" name="NewQuantity" value="@product.Product_Quantity" min="0" class="form-control" />
                            <button type="submit" class="btn btn-warning mt-2">Update Quantity</button>
                        </form>
                    </td>
                    <td>
                        <a href="/Seller/ProductDetails/@product.Product_Id" class="btn btn-info">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Product Details Form Section -->
    <div class="row justify-content-center mt-5">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <h5>Seller Menu</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-page="/Seller/SellerProductDisplay">
                                Products List
                            </a>
                            <a class="nav-link" asp-page="/Seller/SellerOrders">
                                Order History
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="col-md-6 col-lg-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h3 class="text-center text-primary mb-4">Product Details</h3>

                        <form method="post" enctype="multipart/form-data">
                            <!-- Product Name -->
                            <div class="mb-3">
                                <label for="Product_Name" class="form-label">Product Name</label>
                                <input asp-for="Electronic_Products.Product_Name" id="Product_Name" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Product_Name" class="text-danger"></span>
                            </div>

                            <!-- Product Description -->
                            <div class="mb-3">
                                <label for="Product_Description" class="form-label">Product Description</label>
                                <textarea asp-for="Electronic_Products.Product_Description" id="Product_Description" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="Electronic_Products.Product_Description" class="text-danger"></span>
                            </div>

                            <!-- Product Price -->
                            <div class="mb-3">
                                <label for="Product_Price" class="form-label">Price</label>
                                <input asp-for="Electronic_Products.Product_Price" id="Product_Price" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Product_Price" class="text-danger"></span>
                            </div>

                            <!-- Seller Name -->
                            <div class="mb-3">
                                <label for="Seller_Name" class="form-label">Seller Name</label>
                                <input asp-for="Electronic_Products.Seller_Name" id="Seller_Name" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Seller_Name" class="text-danger"></span>
                            </div>

                            <!-- Product Quantity -->
                            <div class="mb-3">
                                <label for="Product_Quantity" class="form-label">Quantity</label>
                                <input asp-for="Electronic_Products.Product_Quantity" id="Product_Quantity" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Product_Quantity" class="text-danger"></span>
                            </div>

                            <!-- Product Image Upload -->
                            <div class="mb-3">
                                <label for="ImageFile" class="form-label">Product Image</label>
                                <input asp-for="Electronic_Products.ImageFile" id="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="Electronic_Products.ImageFile" class="text-danger"></span>
                            </div>

                            <!-- Product Ratings -->
                            <div class="mb-3">
                                <label for="Ratings" class="form-label">Ratings</label>
                                <input asp-for="Electronic_Products.Ratings" id="Ratings" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Ratings" class="text-danger"></span>
                            </div>

                            <!-- Battery Capacity -->
                            <div class="mb-3">
                                <label for="Battery_capacity" class="form-label">Battery Capacity (mAh)</label>
                                <input asp-for="Electronic_Products.Battery_capacity" id="Battery_capacity" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Battery_capacity" class="text-danger"></span>
                            </div>

                            <!-- RAM -->
                            <div class="mb-3">
                                <label for="RAM" class="form-label">RAM (GB)</label>
                                <input asp-for="Electronic_Products.RAM" id="RAM" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.RAM" class="text-danger"></span>
                            </div>

                            <!-- ROM -->
                            <div class="mb-3">
                                <label for="ROM" class="form-label">ROM (GB)</label>
                                <input asp-for="Electronic_Products.ROM" id="ROM" type="number" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.ROM" class="text-danger"></span>
                            </div>

                            <!-- Operating System -->
                            <div class="mb-3">
                                <label for="Operating_System" class="form-label">Operating System</label>
                                <input asp-for="Electronic_Products.Operating_System" id="Operating_System" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Operating_System" class="text-danger"></span>
                            </div>

                            <!-- Brand -->
                            <div class="mb-3">
                                <label for="Brand" class="form-label">Brand</label>
                                <input asp-for="Electronic_Products.Brand" id="Brand" class="form-control" required />
                                <span asp-validation-for="Electronic_Products.Brand" class="text-danger"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100">Save Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


