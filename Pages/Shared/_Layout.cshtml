<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce.styles.css" asp-append-version="true" />
    <style>
        /* Main Header Styling */
        .navbar {
            font-weight: 500;
        }
        /* Logo Styling */
        .navbar-brand {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff !important;
        }
        /* Top Navigation Bar */
        .navbar-light.bg-white {
            background-color: #f8f9fa !important;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #495057;
            transition: color 0.3s ease;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        /* Second Navigation Bar */
        .navbar-light.bg-black {
            background-color: #343a40 !important;
        }

            .navbar-light.bg-black .nav-link {
                color: #f8f9fa;
                font-size: 0.9rem;
            }

                .navbar-light.bg-black .nav-link:hover {
                    color: #ffdd57;
                }

        /* Footer Styling */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Button Styling */
        .navbar-toggler {
            border-color: #6c757d;
        }

        /* Main Content */
        .container main {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Top Navigation Bar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <marquee direction="right"> 
                    <a class="navbar-brand" asp-area="" asp-page="/Index">ನಮ್ಮಂಗಡಿ</a>
                </marquee>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Admin">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Customer/CustomerLoginPage">Customer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/SellerLoginPage">Seller</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Secondary Navigation Bar for Categories -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Electronics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Home Appliances</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/">Women Fashion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Men Fashion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Kid Fashion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Groceries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="">Sports</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - E_commerce - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
